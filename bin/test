#!/bin/bash
set -e

dotnet test --verbosity minimal --no-build --configuration Release --blame -p:CollectCoverage=true -p:CoverletOutput="../coverage.netcoreapp3.1.json" tests/Soulseek.Tests.Unit -p:Include="[Soulseek]*"
dotnet test --verbosity minimal --no-build --configuration Release --blame -p:CollectCoverage=true -p:MergeWith="../coverage.netcoreapp3.1.json" -p:CoverletOutput="../opencover.netcoreapp3.1.xml" -p:CoverletOutputFormat=opencover tests/Soulseek.Tests.Integration -p:Include="[Soulseek]*"